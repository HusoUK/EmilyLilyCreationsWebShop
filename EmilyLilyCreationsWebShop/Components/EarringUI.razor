
<div class="card text-center">
  <img src="@Model.imageUrl" class="card-img-top" alt="@Model.name, earrings">
  <div class="card-body">
	<h5 class="card-title">@Model.name</h5>
	<p class="card-text">@Model.description</p>
  </div>
  <ul class="list-group list-group-flush no-border-top-bottom">
	<li class="list-group-item no-border-top-bottom">Materials: @Model.materials</li>
	<li class="list-group-item no-border-top-bottom">Main colour: @Model.colour</li>
	<li class="list-group-item no-border-top-bottom">Reference: <span class="easy-read-text">@Model.rowKey</span></li>
	<li class="list-group-item no-border-top-bottom">Price: £@Model.price</li>
  </ul>
  <div class="card-body">
	<a href="@Model.imageUrl" target="_blank" class="card-link">Large Image</a>
	<p>(this will open a new tab)</p>
  </div>
</div>

@code {

	[Parameter]
	public EarringModel Model { get; set; }

}